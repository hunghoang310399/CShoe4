@model Customer
@{
    ViewBag.Title = "Edit Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@Html.ValidationSummary(true)
@using (Html.BeginForm("Edit", "Account",
                FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="login">
        <div class="main-agileits">
            <div class="form-w3agile">
                <h2>Chỉnh sữa thông tin</h2>
                <strong>@ViewBag.message</strong>
                <form action="#" method="post">
                    <div class="form-group">
                        <div class="form-group">
                            <label>Tên đăng nhập</label>
                            @Html.TextBoxFor(m => m.Id, new { @class = "form-control", @readonly = true })
                        </div>
                        @Html.HiddenFor(m => m.Password)
                        <div class="form-group">
                            <label>Họ và tên</label>
                            @Html.TextBoxFor(m => m.Fullname, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Địa chỉ Email</label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Ản đại diện</label>
                            <input type="file" name="UpPhoto" class="form-control" />
                            @Html.HiddenFor(m => m.Photo)
                            <img src="~/images/customers/@Model.Photo"
                                 style="width:100px;height:150px;" />
                        </div>
                        @Html.HiddenFor(m => m.Activated)
                        
                            <input class="btn btn-primary" type="submit" value="Update">
                       
                        
                    </div>
                    </form>
            </div>
        </div>
        </div>

        }

