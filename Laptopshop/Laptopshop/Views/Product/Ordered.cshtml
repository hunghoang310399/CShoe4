<div class="new-arrivals-w3agile">
    <div class="container">
        <h2 class="tittle">
            Products Purchased
        </h2>
        <div class="arrivals-grids">


            @foreach (var item in Model)
            {
                <div class="col-md-3 arrival-grid simpleCart_shelfItem">
                    <div class="grid-arr">
                        <div class="grid-arrival">
                            <figure>
                                <a href="~/Product/Detail/@item.Id" @*class="new-gri" data-toggle="modal" data-target="#myModal4"*@>
                                    <div class="grid-img">
                                        <img width="150" height="200" src="~/images/products/@item.Image" data-product-id="@item.Id" class="gw-draggable" />
                                    </div>

                                </a>
                            </figure>
                        </div>
                        <div class="block">
                            <div class="starbox small ghosting"> </div>
                        </div>
                        <div class="women">
                            <h6><a href="~/Product/Detail/@item.Id">Chi tiết</a></h6>

                            @if (item.Discount == 0)
                            {
                                <p> <h3><em style="color:red" class="item_price">@string.Format("{0:0,0}", @item.UnitPrice) VNĐ</em></h3></p>
                            }
                            else
                            {


                                <p>
                                    <h3>
                                        <strike><em class="item_price">@string.Format("{0:0,0}", @item.UnitPrice) VNĐ</em></strike>

                                        <em style="color:red" class="item_price">>@string.Format("{0:0,0}", (@item.UnitPrice * (1 - item.Discount))) VN</em>
                                    </h3>
                                </p>

                            }
                            <button class="my-cart-b item_add" data-add-to-cart="@item.Id">
                               Thêm vào giỏ hàng
                            </button>

                        </div>

                    </div>
                </div>
            }
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<div class="clear"></div>


