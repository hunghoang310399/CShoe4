
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content">
    <div class="products-agileinfo">
        <h2 class="tittle">Danh sách đơn hàng</h2>
        <div class="container">
            <div class="product-agileinfo-grids w3l">
                <div class="col-md-3 product-agileinfo-grid">
                    @Html.Action("_Supp", "Home")

                    <div class="cat-img">
                        <img class="img-responsive " src="~/Content 3/images/45.jpg" alt="">
                    </div>
                    <br />
                    <div class="categories">
                        <h3>Đặt biệt</h3>
                        <ul class="tree-list-pad">


                            <strong>
                                <li><a href="~/Product/ListBySpecial/BEST">Bán chạy nhất</a></li>

                                <li> <a href="~/Product/ListBySpecial/LATEST">Sản Phẩm mới</a></li>

                                <li><a href="~/Product/ListBySpecial/PROMO">Sản phẩm giảm giá</a></li>

                                <li><a href="~/Product/ListBySpecial/SPECIAL">Sản phẩm đặc biệt</a></li>

                                <li><a href="~/Product/ListBySpecial/VIEWS">Sản phẩm được xem nhiều nhất</a></li>
                            </strong>



                        </ul>
                    </div>
                </div>

                <div class="col-md-9 product-agileinfon-grid1">
                    <div class="product-agileinfon-top">
                        <div class="col-md-6 product-agileinfon-top-left">
                            <img class="img-responsive " src="~/Content 3images/img3.jpg" alt="">
                        </div>
                        <div class="col-md-6 product-agileinfon-top-left">
                            <img class="img-responsive " src="~/Content 3images/img4.jpg" alt="">
                        </div>
                        <div class="clearfix"></div>
                    </div>


                    <table class="table">
                        <thead>
                            <tr>
                                <th style="color:red"><center>Id</center></th>
                                <th style="color:red"><center>Khách hàng</center></th>
                                <th style="color:red"><center>Địa chỉ</center></th>
                                <th style="color:red"><center>Ngày đặt hàng</center></th>
                                <th style="color:red"><center>Số Tiền</center></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Order o in Model)
                            {
                                <tr>
                                    <td style="color:black">@o.Id</td>
                                    <td style="color:black">@o.Customer.Id</td>
                                    <td style="color:black">@o.Address</td>
                                    <td style="color:black">@Html.FormatValue(o.OrderDate, "{0:yyyy-MM-dd}")</td>
                                    <td style="color:black">@Html.FormatValue(o.Amount, "{0:c}")</td>
                                    <th>
                                        <a href="~/Order/Detail/@o.Id" class="btn btn-sm btn-primary">
                                            <span class="glyphicon glyphicon-search"></span>
                                        </a>
                                    </th>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <div class="clearfix"> </div>
                </div>
            </div>
        </div>
    </div>

</div>