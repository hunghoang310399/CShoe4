@model IEnumerable<Report>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<meta charset="utf-8">
<section class="content-header">
    <h1>
        Báo cáo
        <small>Doanh thu từ khách hàng</small>
    </h1>

</section>.



<div class="box">
    <div class="box-header">
        <strong>Doanh thu từ khách hàng</strong>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        @using (Html.BeginForm())
        {
            <fieldset>
                <legend>Thời gian</legend>
                <strong> Từ:</strong> <input type="text" id="From" name="From" />
                <strong> Đến:</strong>   <input type="text" id="To" name="To" />
                <input type="submit" value="View" />
            </fieldset>

        }
        <br />
        <div id="chartContainer" style="height: 300px; width: 100%;"></div>
        <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
        <br />
        <table id="example" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Khách hàng
                    </th>
                    <th>
                        Tổng sản phẩm
                    </th>
                    <th>
                        Tổng doanh thu
                    </th>
                    @*<th>
                        Giá tối thiểu
                    </th>
                    <th>
                        Giá tối đa
                    </th>
                    <th>
                        Giá trung bình
                    </th>*@


                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @item.Group @if (item.yGroup != 0)
                        {@item.yGroup}
                    </td>
                    <td>
                        @item.Count
                    </td>
                    <td>
                        @string.Format("{0:0,0}", item.Sum) VNĐ

                    </td>
                    @*<td>
                        @string.Format("{0:0,0}", item.Min) VNĐ
                    </td>
                    <td>
                        @string.Format("{0:0,0}", item.Max) VNĐ

                    </td>
                    <td>
                        @string.Format("{0:0,0}", item.Avg) VNĐ
                    </td>*@


                </tr>
                }

            </tbody>
            <tfoot>
                <tr>
                    <th>
                        Khách hàng
                    </th>
                    <th>
                        Tổng sản phẩm
                    </th>
                    <th>
                        Tổng doanh thu
                    </th>
                    @*<th>
                        Giá tối thiểu
                    </th>
                    <th>
                        Giá tối đa
                    </th>
                    <th>
                        Giá trung bình
                    </th>*@


                </tr>
            </tfoot>
        </table>
    </div>
    <!-- /.box-body -->
</div>
@section scripts{
    <script>
    window.onload = function () {

        var chart = new CanvasJS.Chart("chartContainer", {
            animationEnabled: true,
            theme: "light1", // "light1", "light2", "dark1", "dark2"
            title: {
                text: "Báo cáo của khách hàng"
            },
            subtitles: [{
                text: "Bằng VNĐ",
                fontSize: 16
            }],
            axisY: {
                prefix: "VNĐ",
                scaleBreaks: {
                    customBreaks: [{
                        startValue: 10000,
                        endValue: 35000
                    }]
                }
            },
            data: [{
                type: "column",
                yValueFormatString: "###,###\"VNĐ\"",
                dataPoints: [
                     @foreach (var r in Model)
                     {
                        <text> {  label: "@r.Group", y: @r.Sum},</text>

              }
                ]
            }]
        });
        chart.render();

    }
    </script>
    <script>
        $(function () {
            $("fieldset #From").datepicker({ dateFormat: 'yy-mm-dd' });
        });
        $(function () {
            $("fieldset #To").datepicker({ dateFormat: 'yy-mm-dd' });
        });
    </script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">

    <script src="https://code.jquery.com/jquery-1.12.1.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script type="text/javascript" src="jquery-1.12.0.min.js"></script>

    <script type="text/javascript" src="https://cdn.datatables.net/tabletools/2.2.4/js/dataTables.tableTools.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/tabletools/2.2.2/swf/copy_csv_xls_pdf.swf"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.11/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.1.2/js/dataTables.buttons.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.1.2/js/buttons.flash.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/2.5.0/jszip.min.js"></script>
    <script type="text/javascript" src="https://cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/pdfmake.min.js"></script>
    <script type="text/javascript" src="https://cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/vfs_fonts.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.1.2/js/buttons.html5.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.1.2/js/buttons.print.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#example').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ]
            });
        });
    </script>
}





