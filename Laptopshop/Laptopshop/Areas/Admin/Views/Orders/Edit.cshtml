
@model Laptopshop.Models.Order


@{

    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Đơn hàng</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        <label class = "control-label col-md-2">
            Mã đơn hàng
        </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class = "control-label col-md-2">
            khách hàng
        </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Customer.Fullname, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.Customer.Fullname, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class = "control-label col-md-2" >
            Ngày đặt hàng
        </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.OrderDate, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.OrderDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class = "control-label col-md-2" >
            Ngày nhận hàng
        </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.RequireDate, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.RequireDate, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class = "control-label col-md-2" >
            Thông tin giao hàng
        </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">
            Trạng thái
        </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.DeliveryStatus, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.DeliveryStatus, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">


        <button type="submit" id="btnS" name="Command" value="TT1">Đã giao hàng và thanh toán đủ</button>
        <button type="submit" id="btnC" name="Command" value="TT2">Giao hàng không thành công</button>
        <button type="submit" id="btnC" name="Command" value="TT3">Hủy đơn hàng</button>

    </div>
</div>
  
}

<div>
    @Html.ActionLink("Cancel Update", "ListHoaDon")
</div>

